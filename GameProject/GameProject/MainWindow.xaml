        void CheckKey()
        {
            PlayerMove();
            bool Moving = false;
            int Speed;
            if (map.Keyboard.IsKeyPressed(Key.LeftShift))
                Speed = PlayerRun;
            else
            {
                Speed = PlayerWalk;
            }
           
            xs = x;
            ys = y;
            if (map.Keyboard.IsKeyPressed(Key.W))
            {
                y-= Speed;
                Moving = true;
            }
            if (map.Keyboard.IsKeyPressed(Key.A))
            {
                x -= Speed;
                Moving = true;
            }
            if (map.Keyboard.IsKeyPressed(Key.D))
            {
                x += Speed;
                Moving = true;
            }
            if (map.Keyboard.IsKeyPressed(Key.S))
            {
                y += Speed;
                Moving = true;
            }
            if (Moving)
            {
                map.ContainerMovePreview("fire", x, y, 0);
                if (!(map.CollisionContainers("fire", "wall", true)))
                {
                    map.ContainerSetCoordinate("fire", x, y);
                    CollectGems();
                }
                else
                {
                    x = Player.SaveX;
                    y = Player.SaveY;
                    map.ContainerSetCoordinate("fire",x, y);
                }
            }
            Player.PlayerMoving(x,y,xs,ys);
        }
